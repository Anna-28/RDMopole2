<!DOCTYPE html="{{locale}}">
    {{> header}}
    <body>
        {{> navbar}}
        <br>
        <h1 align="center" id="header">{{Gyms}}</h1>
        <br>
        <div style="width:90%; margin-left:calc(5%);">
            <br><br>
            <table id="table" class="table table-{{style}} table-striped table-bordered table-hover dt-responsive nowrap" style="position: center; width:100%">
                <thead class="thead-dark">
                <tr>
                    <th>Gym Name</th>
                    <th>Team</th>
                    <th>Available Slots</th>
                    <th>Guarding Pokemon</th>
                    <th>In Battle</th>
                    <th>City</th>
                </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
        <br>
    </body>
</html>

<script>
    if ("{{style}}" === 'dark') {
        $('body').css('background-color', 'rgb(33, 37, 41)');
        $('body').css('color', 'rgb(255, 255, 255)');
        //$('#header').css('color', 'white');
    }
    $(document).ready(function() {
        const table = $('#table').DataTable( {
            "ajax": {
                "url": "/api/gyms",
                "dataSrc": "data.gyms",
                "async": true
            },
            "stateSave": true,
            "paging":   true,
            "lengthMenu": [[25, 50, 100, -1], [25, 50, 100, "All"]],
            "pageLength": 50,
            "columns": [
                { "data": "name" },
                { "data": "team" },
                { "data": "available_slots" },
                { "data": "guarding_pokemon_id" },
                { "data": "in_battle" },
                { "data": "city" }
            ],
            "info": true,
            "order": [[ 0, "asc" ]],
            "search.caseInsensitive": true,
            "responsive": true
        });
        table.on('draw.dt', function() {
            setTimeout(function () {
                table.ajax.reload(null, false);
            }, 30 * 1000);
        });
    });
</script>